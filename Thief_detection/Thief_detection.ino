// Pin Configurationconst int sensorPin = 2;      // Input from logic state (thief detection)const int redLedPin = 4;      // Red LED pinconst int greenLedPin = 5;    // Green LED pinconst int buzzerPin = 6;      // Buzzer pinvoid setup() {  pinMode(sensorPin, INPUT);  pinMode(redLedPin, OUTPUT);  pinMode(greenLedPin, OUTPUT);  pinMode(buzzerPin, OUTPUT);  Serial.begin(9600);         // Start serial communication}void loop() {  int state = digitalRead(sensorPin);  if (state == HIGH) {    // Intrusion Detected    digitalWrite(redLedPin, HIGH);    digitalWrite(greenLedPin, LOW);    digitalWrite(buzzerPin, HIGH);    Serial.println("Thief Detected!");  } else {    // All Safe    digitalWrite(redLedPin, LOW);    digitalWrite(greenLedPin, HIGH);    digitalWrite(buzzerPin, LOW);    Serial.println("All Safe");  }  delay(500); // Adjust for debounce/stability}